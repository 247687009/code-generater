<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ke.mapper.RoleMapper" >

<resultMap id="baseResultMap" type="com.ke.entity.Role" >
  		<id column="id" property="id" />
 	  	 <result column="name" property="name" />
</resultMap>
  
  
  
<insert id="insert" parameterType="com.ke.entity.Role" useGeneratedKeys="true" keyProperty="id" >
  insert into `role` (name)
  values (#{name})
</insert>
  
<delete id="delete">
    delete from `role` where id = #{id}
</delete>
  
  
<update id="update" parameterType="com.ke.entity.Role" >
    update `role`
    <set >
    	  id = #{id},
    	  	name = #{name}
    </set>
    where id = #{id}
 </update>
  
  
<update id="merge" parameterType="com.ke.entity.Role" >
    update `role`
<set>
 	 <if test="id != null" >
    	  id = #{id},
     </if>
     <if test="name != null" >
     	  name = #{name}
     </if>
    </set>
    where id = #{id}
  </update>
 
<select id="findOne" resultMap="baseResultMap" parameterType="long">
	select  
		id,name
	from
		`role`
	where id = #{id}	
</select>
  
<select id="findAll" resultMap="baseResultMap" parameterType="com.ke.model.query.RoleQueryModel" >
    select 
   	id,name
    from `user`
   	<where>
   		<if test="nameLK != null">
			<bind name="nameLK" value="'%' + nameLK + '%'"/> and name like #{nameLK}
		</if>
	</where>
	<choose>
		<when test="orderByAndDirection != null">
			order by ${orderByAndDirection}
		</when>
		<otherwise>
			order by id desc
		</otherwise> 
	</choose>
	<if test="offset != null">
		limit #{offset}, #{pageSize}
	</if>
  </select>
  
  <select id="count" resultType="_long" parameterType="com.ke.model.query.RoleQueryModel" >
    select 
    count(*)
    from `user`
   	<where>
   			<if test="nameLK != null">
			<bind name="nameLK" value="'%' + nameLK + '%'"/> and name like #{nameLK}
		</if>
	</where>
  </select>
    
</mapper>