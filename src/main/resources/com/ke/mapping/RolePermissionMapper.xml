<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ke.mapper.RolePermissionMapper" >

<resultMap id="baseResultMap" type="com.ke.entity.RolePermission" >
  		<id column="id" property="id" />
 	  	 <result column="permission" property="permission" />
 	  	 <result column="permission_name" property="permissionName" />
 	  	 <result column="role_id" property="roleId" />
</resultMap>
  
  
  
<insert id="insert" parameterType="com.ke.entity.RolePermission" useGeneratedKeys="true" keyProperty="id" >
  insert into `role_permission` (permission,permission_name,role_id)
  values (#{permission},#{permissionName},#{roleId})
</insert>
  
<delete id="delete">
    delete from `role_permission` where id = #{id}
</delete>
  
  
<update id="update" parameterType="com.ke.entity.RolePermission" >
    update `role_permission`
    <set >
    	  id = #{id},
    	  permission = #{permission},
    	  permission_name = #{permissionName},
    	  	role_id = #{roleId}
    </set>
    where id = #{id}
 </update>
  
  
<update id="merge" parameterType="com.ke.entity.RolePermission" >
    update `role_permission`
<set>
 	 <if test="id != null" >
    	  id = #{id},
     </if>
 	 <if test="permission != null" >
    	  permission = #{permission},
     </if>
 	 <if test="permissionName != null" >
    	  permission_name = #{permissionName},
     </if>
     <if test="roleId != null" >
     	  role_id = #{roleId}
     </if>
    </set>
    where id = #{id}
  </update>
 
<select id="findOne" resultMap="baseResultMap" parameterType="long">
	select  
		id,permission,permission_name,role_id
	from
		`role_permission`
	where id = #{id}	
</select>
  
    
</mapper>