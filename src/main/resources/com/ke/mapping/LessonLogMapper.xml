<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ke.mapper.LessonLogMapper" >

<resultMap id="baseResultMap" type="com.ke.entity.LessonLog" >
  		<id column="id" property="id" />
 	  	 <result column="content" property="content" />
  		 <result column="lesson_log_type" property="lessonLogType" typeHandler="org.apache.ibatis.type.EnumOrdinalTypeHandler"/>
 	  	 <result column="operator_id" property="operatorId" />
 	  	 <result column="created_time" property="createdTime" />
</resultMap>
  
  
  
<insert id="insert" parameterType="com.ke.entity.LessonLog" useGeneratedKeys="true" keyProperty="id" >
  insert into `lesson_log` (content,lesson_log_type,operator_id,created_time)
  values (#{content},#{lessonLogType,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},#{operatorId},#{createdTime})
</insert>
  
<delete id="delete">
    delete from `lesson_log` where id = #{id}
</delete>
  
  
<update id="update" parameterType="com.ke.entity.LessonLog" >
    update `lesson_log`
    <set >
    	  id = #{id},
    	  content = #{content},
			lesson_log_type = #{lessonLogType,typeHandler=org.apache.ibatis.type.EnumOrdinalTypeHandler},
    	  operator_id = #{operatorId},
    	  	created_time = #{createdTime}
    </set>
    where id = #{id}
 </update>
  
  
<update id="merge" parameterType="com.ke.entity.LessonLog" >
    update `lesson_log`
<set>
 	 <if test="id != null" >
    	  id = #{id},
     </if>
 	 <if test="content != null" >
    	  content = #{content},
     </if>
 	 <if test="lessonLogType != null" >
    	  lesson_log_type = #{lessonLogType},
     </if>
 	 <if test="operatorId != null" >
    	  operator_id = #{operatorId},
     </if>
     <if test="createdTime != null" >
     	  created_time = #{createdTime}
     </if>
    </set>
    where id = #{id}
  </update>
 
<select id="findOne" resultMap="baseResultMap" parameterType="long">
	select  
		id,content,lesson_log_type,operator_id,created_time
	from
		`lesson_log`
	where id = #{id}	
</select>
  
    
</mapper>